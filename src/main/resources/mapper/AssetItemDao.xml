<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.li.dao.UserDao">
	
	<select id="fetch"
		resultType="cn.li.pojo.User">
		SELECT id,username,password
		FROM `user`
		WHERE id=#{id}
	</select>
	
	<select id="list" resultType="cn.li.pojo.User">
		SELECT id,username,password
		FROM `user
	</select>
</mapper>